<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F1"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Judul -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang \n Di"
            android:textSize="28sp"
            android:textColor="#144734"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"/>

        <!-- Gambar Buah Sawit -->
        <ImageView
            android:id="@+id/imageSawit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:src="@mipmap/logo1"
            android:layout_marginBottom="24dp"/>

        <!-- Tombol Mulai Deteksi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai Deteksi Sekarang"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E7032"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_detect"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            android:paddingVertical="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="32dp"/>

        <!-- Fitur Lainnya -->
        <TextView
            android:id="@+id/textFitur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitur Lainnya"
            android:textSize="20sp"
            android:textColor="#144734"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Card Fitur -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Histori -->
            <LinearLayout
                android:id="@+id/button_usage"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/rounded_corner_dark"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="6dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_history"
                    android:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Histori"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Tentang -->
            <LinearLayout
                android:id="@+id/button_about"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/rounded_corner_dark"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="6dp"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_info"
                    android:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </GridLayout>


    </LinearLayout>
</ScrollView>
